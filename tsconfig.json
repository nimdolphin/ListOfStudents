{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "libraries/*": ["libraries/*"],
      "images/*": ["images/*"]
    },
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "esModuleInterop": true
  },
  "files": ["custom.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/components/StudentDeleteButton/index.tsx",
    "src/components/StudentItem/index.jsx"
  ],
  "exclude": ["node_modules"]
}
